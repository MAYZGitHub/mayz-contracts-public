flag defer-plugin-errors
  description:
    Defer errors from the plugin, useful for things like Haddock that can't handle it.

  default:     True
  manual:      True

common common-all
  default-language:   Haskell2010
  ghc-options:
    -fobject-code -fno-ignore-interface-pragmas
    -fno-omit-interface-pragmas -fno-strictness -fno-spec-constr
    -fno-specialise -fexpose-all-unfoldings
    -Wnoncanonical-monad-instances -Wall -Wincomplete-uni-patterns
    -Wincomplete-record-updates -Wredundant-constraints -Widentities
    -Wunused-matches -Wunused-binds -Wno-unused-imports
  if flag(defer-plugin-errors)
    ghc-options: -fplugin-opt PlutusTx.Plugin:defer-errors

  -- cuando quiero hacer profiling de los scripts... pero no anda ya como antes
  -- {-# OPTIONS_GHC -fplugin-opt PlutusTx.Plugin:profile-all #-}
  -- {-# OPTIONS_GHC -g -fplugin-opt PlutusTx.Plugin:coverage-all #-}
  default-extensions:
    NoImplicitPrelude
    BangPatterns
    NumericUnderscores
    OverloadedStrings

  -- Strict
  -- DeriveFoldable
  -- DeriveFunctor
  -- DeriveGeneric
  -- DeriveLift
  -- DeriveTraversable
  -- ExplicitForAll
  -- GeneralizedNewtypeDeriving
  -- ImportQualifiedPost
  -- ScopedTypeVariables
  -- StandaloneDeriving

